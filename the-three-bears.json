            "duration": 2
        },
        {
            "type": "action",
            "details": {
                "text": "Goldilocks falls asleep in Baby Bear's bed."
            },
            "duration": 3
        },
        {
            "type": "beat",
            "title": "Sleeping moment",
            "duration": 2
        },
        {
            "type": "pause",
            "title": "Scene pause before bears return",
            "duration": 2
        },
        {
            "type": "scene",
            "title": "Scene 4"
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "FatherBear",
                "text": "My porridge is just right now!"
            },
            "duration": 2
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "MotherBear",
                "text": "Mine too!"
            },
            "duration": 2
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "BabyBear",
