            "duration": 2
        },
        {
            "type": "scene",
            "title": "Scene 2"
        },
        {
            "type": "location",
            "details": {
                "ref": "cottage-inside-1"
            }
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "Goldilocks",
