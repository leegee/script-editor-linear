            "duration": 3
        },
        {
            "type": "action",
            "details": {
                "text": "Goldilocks enters the cottage."
            },
            "duration": 2
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "Narrator",
                "text": "On the table were three bowls of porridge."
            },
            "duration": 3
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "Goldilocks",
                "text": "Ouch! This porridge is too hot!"
            },
            "duration": 2
        },
        {
            "type": "soundfx",
            "details": {
                "text": "Steam rises from hot porridge"
            },
            "duration": 2
