        {
            "type": "beat",
            "details": {
                "text": "Meanwhile, the bears return from their walk."
            }
        },
        {
            "type": "scene",
            "title": "Scene 3"
        },
        {
            "type": "location",
            "details": {
                "ref": "cottage-1"
            }
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "FatherBear",
