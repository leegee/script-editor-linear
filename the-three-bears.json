            }
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "Goldilocks",
                "text": "Thank you for letting me join you."
            },
            "duration": 2
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "Narrator",
