            "type": "act",
            "title": "Act 3"
        },
        {
            "type": "scene",
            "title": "Scene 1"
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "FatherBear",
                "text": "Let’s all have breakfast together now."
            },
            "duration": 3
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "MotherBear",
                "text": "Yes, that would be nice."
            },
            "duration": 2
        },
        {
            "type": "dialogue",
            "details": {
                "characterId": "BabyBear",
                "text": "I love porridge!"
            },
            "duration": 2
        },
